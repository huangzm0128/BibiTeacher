<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/choose_teach_list_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="8dp"
        android:src="@mipmap/bottom_tab_home_gray"
        android:layout_gravity="center_vertical"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp">

                <TextView
                    android:id="@+id/choose_teach_list_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="船到桥头自然沉"
                    android:singleLine="true"
                    android:textSize="17dp"
                    android:maxLength="10"
                    />

                <TextView
                    android:id="@+id/choose_teach_list_realname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="张大炮 男"
                    android:textSize="11dp"
                    />

                <TextView
                    android:id="@+id/choose_teach_list_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系方式:13149394520"
                    android:textSize="11dp"
                    />

            </LinearLayout>

            <Button
                android:id="@+id/choose_teach_bt"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:text="选择"
                android:background="@drawable/btnuser_ripple"
                android:gravity="center"
                android:textSize="12dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="13dp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="bottom"
            android:layout_marginTop="5dp"
            android:background="@drawable/button_top_shadow_line" />

    </LinearLayout>

</LinearLayout>