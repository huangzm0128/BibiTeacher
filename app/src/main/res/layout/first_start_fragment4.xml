<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/welcome_fragment"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clipChildren="false"
    android:background="#3367d6" >

    <FrameLayout
        android:id="@+id/images"
        android:layout_width="@dimen/first_start_images_size"
        android:layout_height="400dip"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/first_start_images_margin_top"
        android:clipChildren="false">
        <ImageView
            android:id="@+id/a013"
            android:layout_width="190dip"
            android:layout_height="350dip"
            android:scaleType="centerInside"
            android:src="@mipmap/image4_b_01_test"
            android:layout_gravity="left|bottom"/>
        <ImageView 
            android:id="@+id/a010"
            android:layout_width="190dip"
            android:layout_height="350dip"
            android:scaleType="centerInside"
            android:src="@mipmap/image4_a_01_test"
            android:layout_gravity="right|bottom"/>
        <ImageView
            android:id="@+id/a012"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:layout_marginTop="16dp"
            android:src="@mipmap/image3_c_01"
            android:layout_gravity="right|top"/>
    </FrameLayout>

    <TextView
        android:id="@+id/heading"
        android:text="@string/welcom_head_04"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/images"
        android:layout_alignLeft="@id/images"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="@dimen/first_start_text_margin"
        android:layout_marginRight="@dimen/first_start_text_margin"
        android:gravity="center"
        android:textAppearance="@style/WelcomeHeadingAppearance" />

    <Button
        android:id="@+id/startMainActivity"
        android:text="进入Bibi家教"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/images"
        android:layout_below="@+id/heading"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="@dimen/first_start_text_margin"
        android:layout_marginRight="@dimen/first_start_text_margin"
        android:background="@drawable/login_other_login_bg"
        android:textAppearance="@style/WelcomeHeadingAppearance" />

</RelativeLayout>