<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_margin="5dp"
    android:orientation="horizontal">
    <ImageView
        android:layout_gravity="center"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imgOrder"
        android:src="@mipmap/icon_index_person_student"/>
    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:weightSum="1">
        <TextView
            android:gravity="center"
            android:id="@+id/tvEmploy"
            android:layout_marginTop="10dp"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:text="家  长："
            android:textSize="14dp"
            android:textStyle="bold"/>
        <TextView
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="描  述："
            android:textSize="14dp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvMkorderUser"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:gravity="center"
            android:text="用户名  年龄:20 男"
            android:textSize="12dp"/>
        <TextView
            android:id="@+id/tvMkorderWriter"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="你是都不都是地哦啊地"
            android:textSize="12dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imgYesNo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:src="@mipmap/no"/>
        <TextView
            android:id="@+id/tvTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="8dp"
            />
        </LinearLayout>


</LinearLayout>
