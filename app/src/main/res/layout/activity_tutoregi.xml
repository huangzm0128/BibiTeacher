<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:myTop="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">
            <pype.mingming.bibiteacher.myhomepage.TopBar
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/myTB_tutorregi"
                myTop:leftText="返回"
                myTop:leftTextColor="@android:color/background_light"
                myTop:titleColor="@android:color/background_light"
                myTop:userTopBarTitle="简历"
                android:layout_alignParentTop="true"
                myTop:titleSize="8dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">
                <pype.mingming.bibiteacher.ui.CircleImageView
                    android:id="@+id/imgTutor"
                    android:src="@drawable/pluralist_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    />
                <TextView
                    android:id="@+id/tvTRUserName"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="用户名"/>
                <TextView
                    android:id="@+id/tvTRSex"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:text="年龄：20  男"
                    />
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@android:color/holo_blue_dark"/>
            <LinearLayout
                android:id="@+id/lySubject"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:orientation="horizontal"
                android:background="@drawable/changecolor">
                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/subject"/>
                <TextView
                    android:id="@+id/tvSubject"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="擅长科目"/>
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/icon_more"
                    android:layout_marginLeft="100dp"
                    />
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="75dp"
                android:layout_marginRight="10dp"
                android:background="@android:color/holo_blue_dark"/>
            <LinearLayout
                android:id="@+id/lyWeek"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:orientation="horizontal"
                android:background="@drawable/changecolor"
                >
                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/day"/>
                <TextView
                    android:id="@+id/tvWeek"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="有空星期"/>
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/arrow_down_float"/>
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/icon_more"
                    android:layout_marginLeft="100dp"
                    />
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="75dp"
                android:layout_marginRight="10dp"
                android:background="@android:color/holo_blue_dark"/>
            <LinearLayout
                android:id="@+id/lyDay"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:orientation="horizontal"
                android:background="@drawable/changecolor">
                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/week"/>
                <TextView
                    android:id="@+id/tvDay"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="有效期"/>
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/arrow_down_float"/>
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/icon_more"
                    android:layout_marginLeft="100dp"
                    />
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="75dp"
                android:layout_marginRight="10dp"
                android:background="@android:color/holo_blue_dark"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/time"/>
                <LinearLayout
                    android:id="@+id/lyStartTime"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/changecolor">
                    <TextView
                        android:id="@+id/tvStartTime"
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="center"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:text="开始时段"/>
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/arrow_down_float"/>
                    />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lyEndTime"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/changecolor">
                    <TextView
                        android:id="@+id/tvEndTime"
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="center"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:text="结束时段"/>
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/arrow_down_float"/>
                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="75dp"
                android:layout_marginRight="10dp"
                android:background="@android:color/holo_blue_dark"/>

            <LinearLayout
                android:id="@+id/lyMap"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:orientation="horizontal"
                android:background="@drawable/changecolor">
                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/location"/>
                <TextView
                    android:id="@+id/tvMap"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="选择您现在的地址"/>
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/icon_more"
                    android:layout_marginLeft="101dp"
                    />
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="75dp"
                android:layout_marginRight="10dp"
                android:background="@android:color/holo_blue_dark"/>
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="4dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/money"/>
                <EditText
                    android:id="@+id/etMoney"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center"
                    android:layout_width="120dp"
                    android:layout_height="60dp"
                    android:textSize="18dp"
                    android:hint="理想报酬"/>
                <LinearLayout
                    android:id="@+id/lyClosing"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/changecolor">
                    <TextView
                        android:id="@+id/tvClosing"
                        android:layout_marginLeft="25dp"
                        android:layout_gravity="center"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:text="完工结算"/>
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/arrow_down_float"/>
                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="115dp"
                    android:layout_height="1dp"
                    android:layout_marginLeft="75dp"
                    android:layout_marginRight="10dp"
                    android:background="@android:color/holo_blue_dark"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@android:color/holo_blue_dark"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="4dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/iphone"/>
                <EditText
                    android:id="@+id/etTutorPhone"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="18dp"
                    android:inputType="phone"
                    android:hint="手机号码"/>

            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="4dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/school"/>
                <EditText
                    android:id="@+id/etUniversity"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="18dp"
                    android:hint="就读大学"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/context"/>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tlIdiograph"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/etEdit"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="自我推荐（不多于25字）"
                        android:textColorHint="@android:color/holo_blue_dark"
                        android:textSize="20dp"
                        android:ellipsize="end"
                        android:maxLength="50"
                        android:background="@null"
                        />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="10dp"
                android:background="@android:color/holo_blue_dark"/>
            <Button
                android:id="@+id/btnTuor"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btnuser_ripple"
                android:text="提交简历"
                android:textSize="20dp"/>

        </LinearLayout>

    </ScrollView>
</LinearLayout>