<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:myTop="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <pype.mingming.bibiteacher.myhomepage.TopBar
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/myTB_password"
        myTop:leftText="返回"
        myTop:leftTextColor="@android:color/background_light"
        myTop:rightText="确认"
        myTop:rightTextColor="@android:color/background_light"
        myTop:titleColor="@android:color/background_light"
        myTop:userTopBarTitle="修改密码"
        android:layout_alignParentTop="true"
        myTop:titleSize="8.5dp"
        />
    <LinearLayout
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="原始密码 :"
            android:textSize="20sp"/>
        <EditText
            android:id="@+id/etOldPassword"
            android:layout_width="210dp"
            android:layout_height="35dp"
            android:inputType="textVisiblePassword"
            android:hint="长度大于6小于18"
            android:maxLength="18"
            android:background="@drawable/rounded_edittext"
            />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@android:color/holo_blue_dark"/>

    <LinearLayout
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新 密 码   :"
            android:textSize="20sp"/>
        <EditText
            android:id="@+id/etNewPassword1"
            android:layout_width="210dp"
            android:layout_height="35dp"
            android:inputType="textVisiblePassword"
            android:hint="长度大于6小于18"
            android:maxLength="18"
            android:background="@drawable/rounded_edittext"
            />
        <ImageView
            android:id="@+id/imagePassword1"
            android:layout_gravity="center"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/bmob_update_btn_check_on_holo_light"
            android:visibility="invisible"
            />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@android:color/holo_blue_dark"/>
    <LinearLayout
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="horizontal">
        <TextView
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认密码 :"
            android:textSize="20sp"/>
        <EditText
            android:id="@+id/etNewPassword2"
            android:layout_width="210dp"
            android:layout_height="35dp"
            android:hint="长度大于6小于18"
            android:inputType="textVisiblePassword"
            android:maxLength="18"
            android:background="@drawable/rounded_edittext"
            />
        <ImageView
            android:id="@+id/imagePassword2"
            android:layout_gravity="center"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/bmob_update_btn_check_on_holo_light"
            android:visibility="invisible"
            />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@android:color/holo_blue_dark"/>
    <Button
        android:id="@+id/btnPassword"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btnuser_ripple"
        android:text="修改"
        android:textSize="20dp"/>


</LinearLayout>
