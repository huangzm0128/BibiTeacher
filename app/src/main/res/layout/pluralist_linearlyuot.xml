<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal">
        <pype.mingming.bibiteacher.ui.CircleImageView
            android:id="@+id/imgPluralist"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/pluralist_image"
            />
        <LinearLayout
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvPluralistName"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@android:color/holo_blue_dark"
                    android:text="第一个兼职者"/>
                <TextView
                    android:id="@+id/tvPluralistSex"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/holo_blue_dark"
                    android:text="年龄：20    男"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="大学："
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_blue_dark"/>
                <TextView
                    android:id="@+id/tvPluralistUniversity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="广州番禺职业技术学院"
                    android:textColor="@android:color/holo_blue_dark"/>
                    android:textSize="16dp"/>
                </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="擅长学科："
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_blue_dark"/>
                <TextView
                    android:id="@+id/tvPluralistSubject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="数学，英语，语文"
                    android:textColor="@android:color/holo_blue_dark"/>
                    android:textSize="18dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="@android:color/holo_blue_dark"
                    android:text="荣誉评价："/>
                <RatingBar
                    android:id="@+id/rbPluralist"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="?android:attr/ratingBarStyleSmall"
                    android:rating="3"
                    />
                <TextView
                    android:id="@+id/tvPluralistAge"
                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="教龄:10"
                    android:textSize="16dp"
                    android:textColor="@android:color/holo_blue_dark"
                    />
                </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/topBarBG"
        />

</LinearLayout>

