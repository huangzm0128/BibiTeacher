<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 使用教程：http://www.cnblogs.com/tiantianbyconan/archive/2012/06/06/2538528.html -->
    <!-- TabIndicator -->
    <declare-styleable name="TabIndicator">
        <!-- 图标数组,应用在单图标渐变 -->
        <attr name="tabIcons" format="reference" />
        <!-- 选中图标数组 -->
        <attr name="tabSelectedIcons" format="reference" />
        <!-- 未选中图标数组 -->
        <attr name="tabUnselectedIcons" format="reference" />
        <!-- 选中时颜色 -->
        <attr name="tabSelectedColor" format="reference|color" />
        <!-- 未选中时颜色 -->
        <attr name="tabUnselectedColor" format="reference|color" />
        <!-- 文字字体大小 -->
        <attr name="tabTextSize" format="dimension" />
        <!-- 是否渐变切换 -->
        <attr name="tabGradualChange" format="boolean" />
        <!-- 条目边距 -->
        <attr name="tabItemPadding" format="dimension" />
        <!-- 指示点大小 -->
        <attr name="TabIndicatorSize" format="dimension" />
    </declare-styleable>

    <!-- 自定义视图属性 -->
    <declare-styleable name="MaterialButton">
        <attr name="alpha" format="integer" />
        <attr name="alpha_step" format="integer" />
        <attr name="frame_rate" format="integer" />
        <attr name="duration" format="integer" />
        <attr name="reveal_color" format="color" />
        <attr name="scale" format="float" />
    </declare-styleable>

    <!-- 自定义日历视图属性 -->
    <declare-styleable name="calendarview">
        <attr name="background_color" format="color"/>
        <attr name="text_color" format="color"/>
        <attr name="weeks_color" format="color" />
        <attr name="selected_color" format="color" />
        <attr name="today_color" format="color" />
        <attr name="year" format="integer" />
        <attr name="month" format="integer" />
        <attr name="today" format="integer" />
        <attr name="selected" format="integer" />
    </declare-styleable>

</resources>